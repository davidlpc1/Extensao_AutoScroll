{
    "manifest_version":2,
    "name":"Auto Scroll",
    "version":"0.1",
    "icons":{
        "16":"./icons/icon.jpg",
        "24":"./icons/icon.jpg",
        "32":"./icons/icon.jpg",
        "48":"./icons/icon.jpg",
        "128":"./icons/icon.jpg"
    },
    "content_scripts":[
        {
            "matches":[
                "<all_urls>"
            ],
            "js":[
                "./scripts/content.js"
            ]
        }
    ],
    "browser_action":{
        "default_icon":"./icons/icon.jpg",
        "default_popup":"./popup/popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}